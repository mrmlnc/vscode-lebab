{
  "name": "vscode-lebab",
  "displayName": "Lebab",
  "description": "Lebab transpiles your ES5 code to ES2015.",
  "version": "2.2.0",
  "publisher": "mrmlnc",
  "license": "MIT",
  "engines": {
    "vscode": "^1.0.0"
  },
  "icon": "icon.png",
  "homepage": "https://github.com/mrmlnc/vscode-lebab/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrmlnc/vscode-lebab"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:lebab.convert"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lebab.convert",
        "title": "Lebab: convert JavaScript code from ES5 to ES2015"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Lebab configuration",
      "properties": {
        "lebab.transforms": {
          "type": "array",
          "default": [
            "arrow",
            "for-of",
            "arg-spread",
            "obj-method",
            "obj-shorthand",
            "no-strict",
            "commonjs",
            "exponent",
            "multi-var"
          ],
          "description": "Convert your old-fashioned code with a specific transformation."
        },
        "lebab.skipWarnings": {
          "type": "boolean",
          "default": true,
          "description": "Some transforms now generate warnings when they cannot be applied, helping you to better diagnose problems."
        }
      }
    }
  },
  "devDependencies": {
    "vscode": "^0.11.15",
    "xo": "^0.16.0"
  },
  "dependencies": {
    "lebab": "2.6.0"
  },
  "scripts": {
    "test": "xo"
  },
  "xo": {
    "space": true,
    "rules": {
      "no-var": 2,
      "prefer-const": [
        2,
        {
          "destructuring": "all"
        }
      ],
      "space-before-function-paren": [
        2,
        "never"
      ],
      "babel/arrow-parens": [
        2,
        "always"
      ],
      "babel/object-curly-spacing": [
        2,
        "always"
      ],
      "babel/generator-star-spacing": [
        2,
        "after"
      ]
    },
    "envs": [
      "node"
    ]
  }
}
