{
  "name": "vscode-lebab",
  "displayName": "Lebab",
  "description": "Lebab transpiles your ES5 code to ES2015.",
  "version": "2.4.0",
  "publisher": "mrmlnc",
  "license": "MIT",
  "engines": {
    "vscode": "^1.7.0"
  },
  "icon": "icon.png",
  "homepage": "https://github.com/mrmlnc/vscode-lebab/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrmlnc/vscode-lebab"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:lebab.convert"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [{
      "command": "lebab.convert",
      "title": "Lebab: convert JavaScript code from ES5 to ES2015"
    }],
    "configuration": {
      "type": "object",
      "title": "Lebab configuration",
      "properties": {
        "lebab.transforms": {
          "type": "array",
          "default": [
            "arrow",
            "for-of",
            "for-each",
            "arg-rest",
            "arg-spread",
            "obj-method",
            "obj-shorthand",
            "no-strict",
            "commonjs",
            "exponent",
            "multi-var"
          ],
          "description": "Convert your old-fashioned code with a specific transformation."
        },
        "lebab.skipWarnings": {
          "type": "boolean",
          "default": true,
          "description": "Some transforms now generate warnings when they cannot be applied, helping you to better diagnose problems."
        }
      }
    }
  },
  "devDependencies": {
    "tslint": "^4.5.1",
    "tslint-config-xo": "^1.1.0",
    "typescript": "^2.1.4",
    "vscode": "^1.0.3"
  },
  "dependencies": {
    "lebab": "2.7.0"
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "clean": "rimraf out",
    "lint": "tslint src/**/*.ts",
    "compile": "tsc",
    "build": "npm run clean && npm run lint && npm run compile",
    "watch": "npm run clean && npm run lint && npm run compile -- --sourceMap --watch"
  }
}
